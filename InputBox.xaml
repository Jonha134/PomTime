<Window x:Class="Pom.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pom"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        SizeToContent="Height"
        Title="Input" 
        Height="150" 
        Width="200">

    <Grid x:Name="Window2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="LblTime" Content="Label" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="50"/>
        <TextBox x:Name="TB" Grid.Column="0" Grid.Row="1" HorizontalAlignment="left" Margin="10,0,0,10" Text="Projekt" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" KeyDown="OnKeyDownHandler"/>

    </Grid>
</Window>
